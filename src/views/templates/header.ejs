<body>
    <div class="main-content">
        <div class="marginRow row">
            <div id="sideBar" class="col-md-2 d-none sidebar-menu-color">
                <div class="row">
                    <div class="col-md-12 tittle">
                        <a href="index.ejs"><%= name %></a>
                    </div>               
                    <div id="ventas" onclick="openNewWindow(this.id)" class="option col-md-12">
                        <i class="fas fa-money-bill-alt"></i>
